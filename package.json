{
  "name": "core-web-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate-contract": "graphql-codegen",
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_OPTIONS='-r next-logger' next start",
    "start:simulate": "NODE_OPTIONS='-r next-logger' next start | pino-pretty",
    "lint": "next lint"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook --disable-emoji || true",
      "pre-commit": "echo \"doing-ci\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.21",
    "cors": "^2.8.5",
    "graphql": "^15.5.1",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@types/node": "^16.4.3",
    "@types/react": "^17.0.15",
    "commitizen": "^4.2.4",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "git-cz": "4.7.6",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "next-logger": "^2.1.0",
    "typescript": "^4.3.5"
  }
}
